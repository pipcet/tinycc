#!/usr/bin/make -f

override_dh_auto_configure:
	dh_auto_configure -- --tccdir=../tcc --docdir=/usr/share/doc/tcc

override_dh_auto_clean:
	[ ! -f config.mak ] || dh_auto_clean

override_dh_installexamples:
	sed -i 1s@/usr/local/bin/tcc@/usr/bin/tcc@ examples/*.c
	dh_installexamples

clean:
	rm -f build
	dh clean

build:
	dh build
	touch build # As recommended by policy ยง4.9

%:
	dh $@
