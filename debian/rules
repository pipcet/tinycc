#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

override_dh_auto_configure:
	dh_auto_configure -- --tccdir=../tcc

override_dh_auto_clean:
	[ ! -f config.mak ] || dh_auto_clean

clean:
	rm -f build
	dh clean

build:
	dh build
	touch build # As recommended by policy ยง4.9

%:
	dh $@
